{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "publish (win64)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "-c",
                "Release",
                "-o",
                "publish",
                "-r",
                "win-x64",
                "/p:DefineConstants=WINDOWS",
                "/p:NativeLib=Shared",
                "/p:SelfContained=true"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test (win64)",
            "type": "shell",
            "command": ".\\test.local.cmd"
        },
        {
            "label": "publish and test (win64)",
            "type": "shell",
            "command": ".\\test.local.cmd",
            "dependsOrder": "sequence",
            "dependsOn": ["publish (win64)"],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish and release (win64)",
            "type": "shell",
            "command": ".\\release.cmd",
            "dependsOrder": "sequence",
            "dependsOn": ["publish (win64)"],
            "problemMatcher": "$msCompile"
        }
    ]
}